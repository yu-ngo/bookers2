<h1>User info</h1>

<% @users.each do |user| %>
  <div>
    <%= image_tag user.get_profile_image %>
    <p><h4>name　　<%= user.name %></h4></p>
    <p><h4>introduction　　<%= user.introduction %></h4></p>
  </div>
<% end %>

<p>
  <%= link_to edit_user_path, class: "btn btn-danger" do %>
　 <i class="fa-solid fa-user-gear"></i>
  <% end %>
</p>

<h1>New Book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<% if @books.empty? %>
 <h2>Books</h2>
<% else %>
 <h2>Book detail</h2>
<% end %>

<table>
  
  
  
  <tbody>
    <% @books.each do |book| %>
   <tr>
    <td>
     <% if @book.image.attached? %>
      <%= image_tag @book.image, size: "100x100" %>
     <% else %>
      <%= image_tag 'no_image', size: "100x100" %>
    </td>
      <p><td><%= book.user.name %></td></p>
     <% end %>
    
    
    <td><%= book.title %></td>
    <td><%= book.body %></td>
   </div>
    <td>
      <%= link_to "Edit", edit_book_path(book.id) %>
    </td>
    <td>
      <%# if @book.user==current_user %>
       <%= link_to "Destroy", books_path(book.id), method: :delete, "data-confirm"=>"本当に消しますか？" %>
      <%# end %>
    </td>
  </tr>
  <% end %>

  </tbody>
</table>