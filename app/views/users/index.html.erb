<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
    </div>
  </div>
</div>
<h1>User info</h1>


  <div>
    <%= image_tag current_user.get_profile_image %>
    <p><h4>name　　<%= current_user.name %></h4></p>
    <p><h4>introduction　　<%= current_user.introduction %></h4></p>
  </div>


<p>
  <%= link_to edit_user_path(current_user), class: "btn btn-danger" do %>
　 <i class="fa-solid fa-user-gear"></i>
  <% end %>
</p>

<h1>New Book</h1>
<%= form_with model: @user_new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Users</h1>
<table>
  <thead>
   <tr>
    <th>image</th>
    <th>name</th>
   </tr>
  </thead>

 <tbody>
 <% @users.each do |user| %>
   <tr>
    <td><%= image_tag user.get_profile_image %></td>
    <td><%= user.name %></td>
    <td><%= link_to "show", user_path(user) %></td>
   </tr>
 <% end %>
 </tbody>
</table>
