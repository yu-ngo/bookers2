<!--フラッシュメッセージ-->
<div>
 <%= flash[:notice] %>
</div>
<div class="container px-5 px-sm-0"
   <div class="row"><!--b-->
    <div class="col-md-3"><!--c-->
     <h2>User info</h2>
     
     <table class="table">
      <tr><%= image_tag @user.get_profile_image %></tr>
      <tr>
       <th>name</th>
       <th><%= @user.name %></th>
      </tr>
      <tr>
       <th>introduction</th>
       <th><%= @user.introduction %></th>
      </tr>
     </table>
      
     <div class="row">
       <%= link_to edit_user_path, class: "btn btn-outline-secondary btn-block" do %>
     　 <i class="fa-solid fa-user-gear"></i>
       <% end %>  
     </div>
     <h2 class="mt-3">New Book</h2>
     
     <%= form_with model: @book_new do |f| %>
     <div class="form-group">
       <h4>Title</h4>
       <%= f.text_field :title %>
     </div>
     
     <div class="form-group">
       <h4>Opinion</h4>
       <%= f.text_area :body %>
     </div>
     
      <div class="form-group">
       <%= f.submit 'Create Book', class: "btn btn-success" %>
      </div>
     <% end %>
    </div><!--c-->
  
  
    <div class="col-md-8 offset-md-1">
     <h2>Books</h2>
     <table class="table table-hover table-inverse">
       <thead>
         <tr>
           <th></th>
           <th>Title</th>
           <th>Opinion</th>
           <th colspan="3"></th>
         </tr>
       </thead>
     </table>
    </div>
    
   </div><!--b-->
</div><!--a-->

 <div class="container mt-5">
