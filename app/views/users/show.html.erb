<h1>User info</h1>

<% @users.each do |user| %>
  <div>
    <%= image_tag user.get_profile_image %>
    <p><h4>name　　<%= user.name %></h4></p>
    <p><h4>introduction　　<%= user.introduction %></h4></p>
  </div>
<% end %>

<p>
  <%= link_to edit_user_path, class: "btn btn-danger" do %>
　 <i class="fa-solid fa-user-gear"></i>
  <% end %>
</p>

<h1>New Book</h1>
<%= form_with model: @user_new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Books</h1>
<table>
 <tr>
  Title
 </tr>
 <tr>
  Opinion
 </tr>
</table>